
%h2 Sign up
.panel
  = simple_form_for(resource, :url => registration_path(resource_name), html: {calss: 'form-horizontal'} ) do |f|
    = f.input :first_name
    = f.input :last_name
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    = f.submit "Sign up"
  = render "shared/links"
